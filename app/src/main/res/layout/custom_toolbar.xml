<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.Toolbar
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tl_custom"
            android:background="?attr/colorPrimary"
            android:minHeight="?attr/actionBarSize"
            android:popupTheme="@style/ThemeOverlay.AppCompat.Light"
            app:theme="@style/ThemeOverlay.AppCompat.ActionBar"
            android:fitsSystemWindows="true"
        >
    <TextView
        android:id="@+id/custom_toolbar_left_tv"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/x50"
        android:textSize="@dimen/SIZE_16_SP"
        android:visibility="gone"
        android:textColor="#fff"
        android:text="取消"/>

    <TextView
        android:id="@+id/custom_toolbar_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="轨迹"
        android:textColor="#fff"
        android:textSize="@dimen/SIZE_20_SP"
        android:layout_gravity="center"
        />

    <ImageView
        android:id="@+id/custom_toolbar_setting"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/icon_settings"
        android:layout_gravity="right"
        android:visibility="gone"
        android:layout_marginRight="@dimen/x20"
        />
    <TextView
        android:id="@+id/custom_toolbar_keep"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginRight="@dimen/x30"
        android:text="保存"
        android:visibility="gone"
        android:textSize="@dimen/SIZE_16_SP"
        android:textColor="#fff"
        />

</android.support.v7.widget.Toolbar>