<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    >

    <TextView
        android:id="@+id/birth_dialog_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="出生年月"
        android:padding="@dimen/x40"
        android:textSize="@dimen/SIZE_18_SP"
        />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/tab_indicator_line"
        android:background="@color/view_line"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/x40"
        android:layout_marginBottom="@dimen/x40"
        android:gravity="center"
        >

        <NumberPicker
            android:id="@+id/birth_dialog_np_year"
            android:layout_width="@dimen/x160"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/birth_dialog_tv_year"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="年"
            />
        <NumberPicker
            android:id="@+id/birth_dialog_np_month"
            android:layout_width="@dimen/x160"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/birth_dialog_tv_month"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="月"
            />
        <NumberPicker
            android:id="@+id/birth_dialog_np_day"
            android:layout_width="@dimen/x160"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/birth_dialog_tv_day"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="日"
            />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/tab_indicator_line"
        android:background="@color/view_line"/>

    <LinearLayout
        android:layout_width="@dimen/x600"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/x20"
        android:layout_marginBottom="@dimen/x40"
        >

        <TextView
            android:id="@+id/birth_dialog_cancle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="@dimen/x20"
            android:text="取消"
            android:textSize="@dimen/SIZE_18_SP"
            android:background="@drawable/textview_cancle_shape"
            />

        <TextView
            android:id="@+id/birth_dialog_confirm"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="确定"
            android:padding="@dimen/x20"
            android:textSize="@dimen/SIZE_18_SP"
            android:background="@drawable/textview_confirm_shape"
            />

    </LinearLayout>

</LinearLayout>